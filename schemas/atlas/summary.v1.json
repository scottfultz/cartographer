{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Atlas Summary v1",
  "type": "object",
  "required": ["timestamps", "stats", "coverage", "engine"],
  "properties": {
    "timestamps": {
      "type": "object",
      "properties": {
        "startedAt": { "type": "string", "format": "date-time" },
        "completedAt": { "type": "string", "format": "date-time" }
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "pages": { "type": "integer", "minimum": 0 },
        "edges": { "type": "integer", "minimum": 0 },
        "assets": { "type": "integer", "minimum": 0 },
        "errors": { "type": "integer", "minimum": 0 }
      }
    },
    "coverage": {
      "type": "object",
      "properties": {
        "packs": { "type": "object", "additionalProperties": { "type": "string" } },
        "parts": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "engine": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
