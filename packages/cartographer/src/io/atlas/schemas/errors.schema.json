{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spec.continuum.local/atlas/errors.schema.json#1",
  "title": "ErrorRecord",
  "description": "Crawl error record for Atlas v1.0 - Owner: Cai Frazier",
  "type": "object",
  "required": [
    "url",
    "origin",
    "hostname",
    "occurredAt",
    "phase",
    "message"
  ],
  "additionalProperties": false,
  "properties": {
    "url": { "type": "string" },
    "origin": { "type": "string" },
    "hostname": { "type": "string" },
    "occurredAt": { "type": "string", "format": "date-time" },
    "phase": {
      "type": "string",
      "enum": ["fetch", "render", "extract", "write"]
    },
    "code": { "type": "string" },
    "message": { "type": "string" },
    "stack": { "type": "string" }
  }
}
