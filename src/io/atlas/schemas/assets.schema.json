{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spec.continuum.local/atlas/assets.schema.json#1",
  "title": "AssetRecord",
  "description": "Media asset record for Atlas v1.0 - Owner: Cai Frazier",
  "type": "object",
  "required": [
    "pageUrl",
    "assetUrl",
    "type",
    "hasAlt",
    "visible",
    "inViewport",
    "wasLazyLoaded"
  ],
  "additionalProperties": false,
  "properties": {
    "pageUrl": { "type": "string" },
    "assetUrl": { "type": "string" },
    "type": {
      "type": "string",
      "enum": ["image", "video"]
    },
    "alt": { "type": "string" },
    "hasAlt": { "type": "boolean" },
    "naturalWidth": { "type": "integer" },
    "naturalHeight": { "type": "integer" },
    "displayWidth": { "type": "number" },
    "displayHeight": { "type": "number" },
    "estimatedBytes": { "type": "integer" },
    "visible": { "type": "boolean" },
    "inViewport": { "type": "boolean" },
    "loading": { "type": "string" },
    "wasLazyLoaded": { "type": "boolean" }
  }
}
