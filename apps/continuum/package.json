{
  "name": "@cf/continuum",
  "version": "1.0.0-beta.1",
  "description": "Continuum - SEO Analysis Tool for Atlas Archives",
  "author": "Cai Frazier",
  "private": true,
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm run build && electron ./dist/main.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "start": "electron ./dist/main.js",
    "package": "electron-builder",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "com.caifrazier.continuum",
    "productName": "Continuum",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@atlas/sdk": "workspace:*",
    "@atlas/spec": "workspace:*",
    "@mongodb-js/zstd": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.6.3"
  }
}
